<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<% if logged_in? and @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user),
                class: "btn btn-outline-info" %>
    <%= link_to "Delete Profile", user_path(@user),
                data: { turbo_method: :delete, turbo_confirm: "Are you Sure" },
                class: "btn btn-outline-danger" %>
  </div>
<% end %>
<h3 class="text-center mt-4">Articles</h3>
<% @articles.each do |article| %>
  <%= render 'articles/article', article: article %>
<% end %>
